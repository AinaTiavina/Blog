{% extends 'base.html.twig' %}

{% block title "All Posts" %}


{% block body %}
    {% if posts|length == 0 %}
        <p>There is no pin yet</p>
    {% else %}
        {% for post in posts %}
            <article>
                <h1><a href="{{ path('app_post_show', {id:post.id})}}">{{ post.title }}</a></h1>
                <p>{{ post.description }}</p>
            </article>
        {% endfor %}
        
    {% endif %}
{% endblock %}
